-- âŒ FNAF 2 ESP KAPATICI
----------------------------------------------------
local workspace = game:GetService("Workspace")

-- YalnÄ±zca yeni karakterler
local highlightCharacters = {
    ["Toy Chica"] = true,
    ["Toy Freddy"] = true,
    ["Toy Bonnie"] = true,
    ["Withered Bonnie"] = true,
    ["Withered Chica"] = true,
    ["Withered Freddy"] = true,
    ["Withered Foxy"] = true,
    ["Mangle"] = true,
    ["Balloon Boy"] = true
}

-- Highlight varsa gÃ¼venli ÅŸekilde sil
local function removeHighlightIfCharacter(child)
    if highlightCharacters[child.Name] and child:IsA("Model") then
        local highlight = child:FindFirstChildOfClass("Highlight")
        if highlight then
            highlight.Adornee = nil
            highlight.Parent = nil
        end
    end
end

-- Mevcut karakterlerdeki highlight'larÄ± sil
for name, _ in pairs(highlightCharacters) do
    local model = workspace:FindFirstChild(name)
    if model then
        removeHighlightIfCharacter(model)
    end
end

-- Sonradan eklenecek karakterler iÃ§in bir kez sil
workspace.ChildAdded:Connect(function(child)
    removeHighlightIfCharacter(child)
end)
