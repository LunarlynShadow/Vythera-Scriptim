local StarterGui = game:GetService("StarterGui")

StarterGui:SetCore("SendNotification", {
    Title = "â˜†Vythera ðŸŒŒ : Enemy Boxes",
    Text = "Enemy Boxes ESP BaÅŸarÄ±yla AÃ§Ä±ldÄ±! YapÄ±mcÄ± : SHADOWCASE1",
    Button1 = "TamamdÄ±r!",
    Duration = 5
